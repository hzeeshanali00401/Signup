@model string
@{
    Layout = "_EmptyLayout";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card p-4 text-center" style="width: 100%; max-width: 600px;">
        <div class="card-body">
            <h1 class="card-title text-success">Success!</h1>
            <p class="card-text">
                Thank you for signing up. A confirmation email has been sent to your provided email address. 
                Please check your inbox (and your spam or junk folder) to verify your email address and complete your registration.
            </p>
            <a href="/" class="btn btn-primary mt-3">Go to Home</a>
        </div>
        <div class="text-muted mt-3">
            <small>@Model</small>
        </div>
    </div>
</div>
